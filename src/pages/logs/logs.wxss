page {
  background-color: #f5f5f5;
}
.messageBox {
  min-height: 100rpx;
  background-color: #fff;
}
.messageBox .bg {
  height: 100rpx;
  background-color: #FFD100;
  position: relative;
  text-align: center;
}
.messageBox .bg .head {
  width: 156rpx;
  height: 156rpx;
  position: absolute;
  left: 50%;
  margin-left: -78rpx;
  bottom: -78rpx;
  border-radius: 50%;
  background: #fff;
}
.messageBox .mes {
  padding: 78rpx 0rpx 40rpx;
  text-align: center;
}
.messageBox .mes .title {
  font-size: 36rpx;
  color: #282828;
  margin: 15rpx 0;
}
.messageBox .mes .tt {
  font-size: 24rpx;
  color: #5e5e5e;
  padding: 0 40rpx;
}
.nav {
  display: flex;
  background-color: #fff;
  padding-top: 20rpx;
}
.nav view:nth-child(1) {
  padding-right: 20rpx;
}
.nav view:nth-child(2) {
  padding-left: 20rpx;
}
.nav .tab {
  flex: 1;
  font-size: 32rpx;
}
.nav .tab > text {
  display: inline-block;
  padding: 0rpx 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid transparent;
  color: #c9c9c9;
}
.nav .tab .acTab {
  border-color: #282828;
  color: #282828;
}
.nav .l {
  text-align: right;
}
.content {
  padding: 50rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.content .cell {
  box-sizing: border-box;
  width: 50%;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}
.content .cellCon {
  background-color: #fff;
}
.content .cellCon image {
  height: 267rpx;
  width: 100%;
}
.content .cellCon .conText {
  padding: 25rpx;
}
.content .cellCon .text {
  text-align: center;
  border-bottom: 1px solid #e3e3e3;
  padding-bottom: 10rpx;
}
.content .cellCon .text > view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content .cellCon .text view:nth-child(1) {
  font-size: 14rpx;
  color: #585858;
}
.content .cellCon .text view:nth-child(2) {
  font-size: 22rpx;
  color: #282828;
  margin: 10rpx 0 20rpx;
}
.content .cellCon .text view:nth-child(3) {
  font-size: 14rpx;
  color: #585858;
  padding: 0 40rpx;
}
.content .cellCon .bodys {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
}
.content .cellCon .bodys .left {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
}
.content .cellCon .bodys .mid {
  padding: 0 20rpx;
}
.content .cellCon .bodys .mid .title {
  font-size: 15rpx;
  color: #000;
}
.content .cellCon .bodys .mid .ttl {
  font-size: 10rpx;
  color: #585858;
  margin-top: 5rpx;
}
.content .cellCon .bodys .last {
  flex: 1;
  text-align: right;
  font-size: 14rpx;
  color: #c9c9c9;
}
.content .cellCon .bodys .last image {
  height: 13rpx;
  width: 16rpx;
}
.content .cellCon .newBody {
  position: relative;
  line-height: 42rpx;
  height: 42rpx;
  text-align: center;
  font-size: 14rpx;
  color: #c9c9c9;
}
.content .cellCon .newBody image {
  height: 13rpx;
  width: 16rpx;
}
.content .cellCon .newBody > text {
  font-size: 14rpx;
  position: absolute;
  right: 10rpx;
  bottom: 0;
  color: #c9c9c9;
}
.red {
  color: #FF0042;
}
